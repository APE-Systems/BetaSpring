extends layout

block content
  include includes/mixins/mixins

  .row.metric-panel
    .small-10.columns
      h4.edit Bench Press
      dl
        dt Metric Category
        dd.editable_select Strength
        dt Measurement Types
        dd.editable_select Weight
        dt Units
        dd.editable_select lbs
    .small-2.columns
      a(href='#')
        //-i.foundicon-edit.right

  .row
    .small-12.columns.metric-panel-subnav
      .row
        .small-4.columns
          ul.button-group.radius
            li
              a.small.button.secondary(href='#', data-reveal-id='create-metric-modal') Create Metric
            form.custom
              select.medium(id='metric-category-dropdown')
                option All
                option Biometrics
                option Strength
                option Power
                option Speed
        .small-8.columns
          ul.button-group.radius.right
            li
              a.small.button.secondary.disabled(href='#') Remove from Category
            li
              a.small.button.secondary(href='#', data-reveal-id='create-metric-category-modal') Create Metric Category
    .small-12.columns
      table
        col(style='width: 10%')
        col(style='width: 90%')
        thead
          tr
            th &nbsp;
            th Metric Name
        tbody
          +test-admin-row('Bench Press')
          +test-admin-row('Back Squat')
          +test-admin-row('Body Row')
          +test-admin-row('Body Weight')
          +test-admin-row('Body Fat %')
          +test-admin-row('Barbell Row')
          +test-admin-row('Neck Girth')
          +test-admin-row('40 Yard Spring')
          +test-admin-row('Power Clean')
          +test-admin-row('Hang Clean')

prepend scripts

  #create-metric-category-modal.reveal-modal.small
    h4 Create Metric Category
    a.close-reveal-modal &#215;
    form#create-metric-category-form(action='#', method='post', data-abide)
      input#metric-category-name(type='text', name='metric-category-name', placeholder='Metric Category')
      input#metric-category-name-submit(type='submit', value='Create')


append scripts
  script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/jeditable.js/1.7.3/jeditable.min.js')
  script(type='text/javascript', src='/_js/test_admin.js')