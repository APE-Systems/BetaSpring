extends layout

append head
  link(rel='stylesheet', href='../_css/teams.css')
  link(href='../_js/vendor/sidr/stylesheets/jquery.sidr.dark.css', rel='stylesheet')
  link(rel='stylesheet', href='../_icons/stylesheets/general_foundicons.css')
block content
  - if(typeof flash != 'undefined')
    include includes/mixins/flash-messages
    mixin flash-messages(flash)

  - if (typeof(teams) !== "undefined")
    .large-12.large-centered.columns.centered
      a.button(href='#', data-reveal-id='teamModal') Create Team
    hr

    .row
      .large-centered.columns#all-teams
        ul#teams-list
          for team in teams
            li(class=team.name + " " + team.gender)
              h3.capitalize= team.name
              span.capitalize= team.gender
              button View team
              i.foundicon-trash.right
              i.foundicon-edit.right
              


  - else
    .small-6.large-centered.columns
      .centered-div
        .add-team-box.gray
          .centered
            a#add-team(href='#', data-reveal-id='teamModal') +
        span Welcome to the APE System! 
        br 
        span Get started by creating teams.

prepend scripts
  #teamModal.reveal-modal.small
    a.close-reveal-modal &#215;
    form.data-abide#create-team-form(action='/teams', method='post', enctype='multipart/form-data')
      .row
        .large-12.columns
          h4 Create Team
          div
            label Sport
            input#team-name(type='text', name='team-name', required='required', pattern='[a-zA-Z0-9]+', placeholder='Ex: Baseball, Football')
          div
            label Gender
            select#team-gender(name='team-gender')
              option(value='men') Men
              option(value='women') Women
          div
            input(type='submit', id='create-team-submit', value='Create Team')
