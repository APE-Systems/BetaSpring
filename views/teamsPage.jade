extends layout

block content
  - if(typeof flash != 'undefined')
    include includes/mixins/flash-messages
    mixin flash-messages(flash)

  - if (typeof(teams) !== "undefined")

    .small-12.large-centered.columns.centered#createTeamButton
      a#createTeamButton.button(href='#', data-reveal-id='teamModal') Create Team
  
    .row
      .large-centered.columns#all-teams
        ul#teams-list
          for team in teams
            li(class=team.name + " " + team.gender)
              h3(data-name=team.name)= team.name
              span= team.gender
              a(href='/#{nav}/#{team.name}-#{team.gender}/roster'): button View team
              a.team-buttons#delete-team(href='#', data-reveal-id='deleteModal')
                i.foundicon-trash.right
              a.edit-team.team-buttons(href='#')
                i.foundicon-edit.right
              a.save-team.team-edits(href='#')
                i.foundicon-checkmark.right
              a.cancel-team.team-edits(href='#')
                i.foundicon-remove.right
  - else
    .small-6.large-centered.columns
      .centered-div
        .add-team-box.gray
          .centered
            a#add-team(href='#', data-reveal-id='teamModal') +
        span Welcome to the APE System! 
        br 
        span Get started by creating teams.

prepend scripts

  #deleteModal.reveal-modal.small
    a.close-reveal-modal(id='delete-cancel') &#215;
    form#delete-team-form(action='#', method='delete')
      .row
        .small-12.columns
          h4 Are you sure you want to delete this team?
         .small-12.columns
            input(type='submit', id='delete-team', value='Yes, Delete')
            //-input.close-reveal-modal(type='button', id='delete-cancel', value='Cancel')

  #teamModal.reveal-modal.small
    a.close-reveal-modal &#215;
    form#create-team-form(action='#', method='post', data-abide)
      .row
        .small-12.columns
          h4 Create Team
          div
            label Sport
            input#team-name(type='text', name='team-name', required='required', pattern='[a-zA-Z]+', placeholder='Ex: Baseball, Football')
          div
            label Gender
            select#team-gender(name='team-gender')
              option(value='men') Men
              option(value='women') Women
          div
            input(type='submit', id='create-team-submit', value='Create Team')

  #edit-team-modal.reveal-modal.small
    a.close-reveal-modal &#215;
    form#edit-team-form(action='#', method='put')
      .row
        .small-12.columns
          h4 Edit Team
          div
            label Sport
            input#edit-team-name(type='text', name='edit-team-name', required='required', pattern='^[_]*[a-zA-Z0-9][a-zA-Z0-9 _.-]*$', placeholder='::FORMER NAME::')
          div
            label Gender
            select#edit-team-gender(name='edit-team-gender')
              option(value='men') Men
              option(value='women') Women
          div
            input(type='submit', id='edit-team-submit', value='Edit Team')

append scripts
  script(type='text/javascript', src='/_js/teams_page_events.js')
