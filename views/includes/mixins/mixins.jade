mixin roster-row(firstName, lastName, position, group)
  tr
    td
      input(type='checkbox')
    td #{firstName}
    td #{lastName}
    td #{position}
    td #{group}

mixin test-admin-row(metric)
  tr
    td
      input(type='checkbox')
    td #{metric}

mixin edit-data-row(date, value)
  tr
    td #{date}
    td #{value}
    td
      a
        i.foundicon-checkmark
    td
      a
        i.foundicon-remove
    td
      a
        i.foundicon-add-doc


mixin training-test-row(firstName, lastName, lastRecord)
  tr
    td #{firstName}
    td #{lastName}
    td #{lastRecord}
      a(href='#'): i.foundicon-edit
    td
      input(type='text')
      a.small.button.success.radius(href='#') Update