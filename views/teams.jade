body
  include includes/splash-nav

  .row
    #sidr-left
      ul#side-nav.accordion
        li
          a(href='#') Teams
        li
          a(href='#') Roster
        li
          a(href='#') Training
          ul
            li
              a(href='#') Test Admin
            li
              a(href='#') Test
            li
              a(href='#') Training Plan Creator
        li
          a(href='#') Reporting
        li
          a(href='#') Admin
    #sidr-right
      ul#ape-nav.accordion
        li
          a(href='#') APE Global Library + 
          ul
            li
              a(href='#') Create Metric Category
            li
              a(href='#') Create Metric
        li
          a(href='#') Basketball (Men)
        li
          a(href='#') Baseball (Men) 


    .small-6.large-centered.columns.centered
      h3 Teams: All / Men / Women 
      a.button(href='#', data-reveal-id='myModal') Create Team
    h5 Men's Teams
    hr

  .row
    .small-6.columns
      ul.small-block-grid-4
        for team in teamsPage.apeLibrary.teams
          li.box
            span.caption
              p= team.name

    .small-6.columns
      ul.small-block-grid-4
        for team in teamsPage.apeLibrary.teams
          li.box
            span.caption
              p= team.name 
  include includes/footer


  #myModal.reveal-modal.large
    h4 Create Team
    form(action='...', method='post', enctype='multipart/form-data')
      .row
        .small-3.columns
          img(src='http://placehold.it/150x200')
          input(type='file', name='displayImage')
        .small-9.columns
          div
            label name
            input(type='text', name='name')
          div
            label gender
            input(type='text', name='gender')
          div
            input(type='submit')

  #myModalBACKUP.reveal-modal.large

    h4 Create Team
    .row
      .small-3.columns
        img(src='http://placehold.it/150x200')
        a.small.button.expand.upimage(href='#' ) Upload Image
      .small-9.columns
        form
          a.button.dropdown.expand(href='#', data-dropdown='drop1') Sport
          ul#drop1.f-dropdown
            li
              a(href='#') Football
            li
              a(href='#') Track and Field
            li
              a(href='#') Basketball
          label(for='customDropdown1') Sex
            select#customDropdown1.medium
                option(disabled='DISABLED') Select
                option Male
                option Female
      .small-12.columns
        a.large.button.expand(href='#') Create Team

  script
    $(document).ready(function() {
    $('#left-menu').sidr({
    name: 'sidr-left',
    side: 'left' // By default
    });
    $('#right-menu').sidr({
    name: 'sidr-right',
    side: 'right'
    });
    $('#ape-nav').dcAccordion({
    eventType: 'click',
    autoClose: true,
    saveState: true,
    disableLink: true,
    speed: 'fast',
    autoExpand: true,
    });
    $('#side-nav').dcAccordion({
    eventType: 'click',
    autoClose: true,
    saveState: true,
    disableLink: true,
    speed: 'fast',
    autoExpand: true,
    });
    });


  script(src='../_js/vendor/sidr/jquery.sidr.min.js')
            
